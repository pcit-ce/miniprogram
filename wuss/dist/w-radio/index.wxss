@import '../common/theme/global.wxss';

.wuss-radio {
  position: relative;
  transition: .25s;
}

.wuss-radio .wuss-radio-checked {
  position: absolute;
  left: 50%;
  top: 50%;
  border-radius: 50%;
  font-size: 0;
  letter-spacing: 0;
  transition: all .25s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  transform: translate(-50%, -50%) scale(0);
  opacity: 0;
}

.wuss-radio.wuss-radio-active .wuss-radio-checked {
  opacity: 1;
  transform: translate(-50%, -50%) scale(1);
}

.wuss-radio-disabled {
  opacity: .6;
}

.w-pane {
  margin: 10px;
}