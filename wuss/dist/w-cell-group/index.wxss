/* dist/w-cell-group/index.wxss */
.wuss-cell-group {
  background: #ffffff;
  position: relative;
  clear: both;
  overflow: hidden;
}

.wuss-cell-group::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  font-size: 0;
  padding: 0;
  margin: 0;
  box-shadow: none;
  text-shadow: none;
  letter-spacing: 0;
  border-top: 1px solid #d9d9d9;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  clear: both;
  overflow: hidden;
}

.wuss-cell-group::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  font-size: 0;
  padding: 0;
  margin: 0;
  box-shadow: none;
  text-shadow: none;
  letter-spacing: 0;
  border-top: 1px solid #d9d9d9;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  clear: both;
  overflow: hidden;
}
