@import '../common/theme/global.wxss';

.wuss-tag {
  color: rgba(0, 0, 0, 0.65);
  box-sizing: border-box;
  list-style: none;
  line-height: 40rpx;
  height: 44rpx;
  padding: 0 14rpx;
  border-radius: 8rpx;
  border: 1rpx solid #d9d9d9;
  background: #fafafa;
  font-size: 24rpx;
  margin-right: 16rpx;
  white-space: nowrap;
  transition: all 0.3s cubic-bezier(0.215, 0.61, 0.355, 1);
  transform-origin: 0px 100% 0px;
  transform: scale(1, 1);
  display: inline-block;
}

.wuss-tag-close {
  transform: scale(0, 0);
  width: 0 !important;
  padding: 0;
  margin: 0;
}

.wuss-tag-normal {
  color: #888;
  border: 1rpx solid #ddd;
}

.wuss-tag-active {
  color: #108ee9;
  border: 1rx solid #108ee9;
}

