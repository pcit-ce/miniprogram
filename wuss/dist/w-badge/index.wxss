@import '../common/theme/global.wxss';
.wuss-badge-warp {
  position: relative;
  display: inline-block;
}
.wuss-badge {
  display: flex;
  position: absolute;
  right: 0;
  top: 0;
  min-width: 18px;
  height: 18px;
  color: #fff;
  justify-content: center;
  align-items: center;
  font-size: 10px;
  border-radius: 50%;
  background: rgb(40, 162, 243);
}
.isMax {
  align-items: flex-start;
}
.wuss-badge-round {
  width: 6px;
  height: 6px;
  padding: 0;
  min-width: auto;
  line-height: auto;
  background: pink;
}
