@import '../common/theme/global.wxss';

.wuss-cell {
  position: relative;
  transition: background-color 200ms ease 0s;
}

.wuss-cell-hover {
  background: #ececec;
}

.wuss-cell::before {
  content: ' ';
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #d9d9d9;
  color: #d9d9d9;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  left: 15px;
}

.wuss-cell-first-cell::before {
  display: none;
}

.wuss-cell-hd {
  display: flex;
  flex: 1;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  flex-wrap: nowrap;
  padding: 0 15px;
  box-sizing: border-box;
  min-height: 44px;
}

.wuss-cell-hd-showIcon {
  padding: 0 35px 0 15px;
}

.wuss-cell-ft {
  font-size: 13px;
  color: #999999;
}

.wuss-cell-hd-desc-padding {
  padding-top: 5px;
  padding-bottom: 5px;
  min-height: initial;
}

.wuss-cell-left {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  padding-right: 10px;
}

.wuss-cell-left w-icon {
  padding-right: 5px;
}

.wuss-cell-label {
  font-size: 15px;
  font-weight: normal;
}

.wuss-cell-right {
  display: flex;
  flex: 1;
  justify-content: flex-end;
  align-items: center;
  padding-right: 15px;
}

.wuss-cell-right-content {
  color: #999999;
  display: flex;
  flex: 1;
  align-items: center;
  text-align: right;
  font-size: 15px;
  white-space: wrap;
  word-break: break-all;
}

.wuss-cell-link {
  position: absolute;
  right: 10px;
  top: 50%;
  transform: translate(0, -50%);
}

.wuss-cell-label-disabled,
.wuss-cell-right-content-disabled {
  color: #b2b2b2;
}

.wuss-cell-label-span-1 {
  width: 60px;
}

.wuss-cell-label-span-2 {
  width: 80px;
}

.wuss-cell-label-span-3 {
  width: 100px;
}

.wuss-cell-label-span-4 {
  width: 120px;
}

.wuss-cell-label-span-5 {
  width: 150px;
}