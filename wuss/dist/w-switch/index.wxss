@import '../common/theme/global.wxss';

.wuss-switch {
  position: relative;
  background-color: #ddd9d9;
  border: 1rpx solid #ddd9d9;
  font-size: 0;
  letter-spacing: 0;
}

.wuss-switch-disabled {
  opacity: .5;
}

.wuss-switch-circle {
  position: absolute;
  left: 0;
  background-color: #ffffff;
  border-radius: 50%;
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
  z-index: 1;
  font-size: 0;
  letter-spacing: 0;
  top: 50%;
  transform: translate(0, -50%);
  transition: transform .35s cubic-bezier(0.3, 0.3, 0.25, 1.35);
}

.wuss-switch-mask {
  position: absolute;
  left: 0px;
  top: 0px;
  bottom: 0;
  right: 0;
  z-index: 0;
  opacity: 0;
  transition: opacity 400ms cubic-bezier(0.4, 1, 0.4, 1.35), background-color 200ms cubic-bezier(0.4, 1, 0.4, 1.35);
}

.wuss-switch .wuss-switch-mask.wuss-switch-mask-active {
  opacity: 1;
}


.wuss-switch.wuss-switch-size-small {
  width: 40px;
  height: 20px;
  border-radius: 15px;
}

.wuss-switch.wuss-switch-size-small .wuss-switch-mask {
  width: 38px;
  height: 19px;
  border-radius: 15px;
}

.wuss-switch.wuss-switch-size-small .wuss-switch-circle {
  width: 19px;
  height: 19px;
}

.wuss-switch.wuss-switch.wuss-switch-size-small .wuss-switch-circle.wuss-switch-circle-active {
  top: 50%;
  transform: translate(21px, -50%);
}



.wuss-switch.wuss-switch-size-default {
  width: 50px;
  height: 30px;
  border-radius: 15px;
}

.wuss-switch.wuss-switch-size-default .wuss-switch-mask {
  width: 48px;
  height: 29px;
  border-radius: 15px;
}

.wuss-switch.wuss-switch-size-default .wuss-switch-circle {
  height: 29px;
  width: 29px;
}

.wuss-switch.wuss-switch.wuss-switch-size-default .wuss-switch-circle.wuss-switch-circle-active {
  top: 50%;
  transform: translate(21px, -50%);
}


.wuss-switch.wuss-switch-size-larger {
  width: 55px;
  height: 35px;
  border-radius: 17px;
}

.wuss-switch.wuss-switch-size-larger .wuss-switch-mask {
  width: 53px;
  height: 34px;
  border-radius: 17px;
}

.wuss-switch.wuss-switch-size-larger .wuss-switch-circle {
  height: 34.5px;
  width: 34.5px;
}

.wuss-switch.wuss-switch.wuss-switch-size-larger .wuss-switch-circle.wuss-switch-circle-active {
  top: 50%;
  transform: translate(19.7px, -48%);
}