@import '../common/theme/global.wxss';

.wuss-avatar {
  box-sizing: border-box;
  display: inline-block;
  text-align: center;
  background: #ccc;
  color: #fff;
  white-space: nowrap;
  overflow: hidden;
  vertical-align: middle;
  width: 64rpx;
  height: 64rpx;
  font-size: 36rpx;
  border-radius: 50%;
}

.wuss-avatar-small {
  width: 48rpx;
  height: 48rpx;
  font-size: 28rpx;
}

.wuss-avatar-large {
  width: 80rpx;
  height: 80rpx;
  font-size: 48rpx;
}

.wuss-avatar-square {
  border-radius: 8rpx;
}

.wuss-avatar-string {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.wuss-avatar-src {
  background: none;
}

.wuss-avatar .wuss-avatar-img {
  width: 100%;
  height: 100%;
}