@import '../common/theme/global.wxss';

.wuss-loading {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex: 1;
  z-index: 20000;
  justify-content: center;
  align-items: center;
}

.wuss-loading-content {
  min-width: 120px;
  max-width: 150px;
  min-height: 120px;
  border-radius: 5px;
  margin-bottom: 200px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, .7);
}

.wuss-loading-text {
  color: #ffffff;
  font-size: 15px;
  margin-top: 10px;
  max-width: 100px;
  overflow: hidden;
  white-space: nowrap;
}

.wuss-loading-icon {
  width: 45px;
  height: 45px;
  background: transparent url("data:image/svg+xml;base64,") no-repeat;
  background-size: 100% 100%;
  animation: Rotate 1s steps(12, end) infinite;
  -webkit-animation: Rotate 1s steps(12, end) infinite;
}


@keyframes Rotate {
  from {
    -webkit-transform: rotate(0);
  }

  to {
    -webkit-transform: rotate(360deg);
  }
}

@-webkit-keyframes Rotate {
  from {
    -webkit-transform: rotate(0);
  }

  to {
    -webkit-transform: rotate(360deg);
  }
}