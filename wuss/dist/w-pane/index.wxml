<view class="wuss-class wuss-pane" hover-class="none" hover-stop-propagation="false">
	<view class="title" style="font-size: {{ tsize }}px;" wx:if="{{ title }}" >
    {{ title }}
    <slot name="title" />
	</view>
	<view class="description" style="font-size: {{ dsize }}px;" >
    {{ desc }}
    <slot wx:if="{{ !desc }}" name="desc" />
	</view>
</view>

